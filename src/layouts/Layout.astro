---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="referrer" content="no-referrer" />
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" /> -->
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />
    <main class="md:pt-20 md:pb-0 pb-14">
      <slot />
    </main>
  </body>
</html>
<style is:global>
  /* width */

  html {
    background-color: white;
    scrollbar-gutter: stable both-edges;
    /* font-family:'open sans' ; */
    ::-webkit-scrollbar {
      width: 10px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
      background: #d6d4d4;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
      background: #b4b4b4;
      border-radius: 10px;
    }

    /* Handle on hover */
    ::-webkit-scrollbar-thumb:hover {
      background: #3a3838;
    }
  }
  @media (prefers-color-scheme: dark) {
    html {
      background-color: rgb(10 10 10);

      /* font-family:'open sans' ; */
      ::-webkit-scrollbar {
        width: 10px;
      }

      /* Track */
      ::-webkit-scrollbar-track {
        background: #222121;
      }

      /* Handle */
      ::-webkit-scrollbar-thumb {
        background: #4e4d4d;
        border-radius: 10px;
      }

      /* Handle on hover */
      ::-webkit-scrollbar-thumb:hover {
        background: #3a3838;
      }
    }
  }
  .alert-1-container {
    background-color: rgb(0 0 0 / 0.95);

    color: rgb(255, 255, 255);
    max-width: 300px;
    width: 100%;
    min-height: 20px;
    height: fit-content;
    border-radius: 15px;
    padding: 15px 25px 15px 15px;
    font-size: 1rem;
    font-weight: 600;
    display: flex;
    flex-direction: column;
    position: fixed;
    z-index: 55;
    backdrop-filter: blur(30px);
    animation: fade_up 1s cubic-bezier(0, 0.83, 0.43, 1.02);
  }
  .alert-1-title {
    display: flex;
    gap: 10px;
    align-items: center;
    line-height: 100%;
  }
  .alert-1-description {
    font-size: 0.8rem;
    font-weight: 500;
    color: rgb(255 255 255 / 85%);
    /* background-color: red; */
    width: 100%;
    overflow-wrap: break-word;
  }
  .alert-1-icon-close {
    position: absolute;
    right: 10px;
    top: 10px;
    background-color: rgb(255 255 255);
    color: rgb(0 0 0);
    /* padding: 0 10px; */
    border-radius: 100%;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .alert-1-icon-close:hover {
    cursor: pointer;
    background-color: rgb(255 255 255 / 80%);
  }

  .alert-1-bg-success {
    background: linear-gradient(
      0deg,
      rgba(0, 27, 51, 0.85) 0%,
      rgba(0, 0, 0) 100%
    );
  }
  .alert-1-bg-error {
    background: linear-gradient(
      0deg,
      rgba(51, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.9) 100%
    );
  }
  .alert-1-bg-danger {
    background: linear-gradient(
      0deg,
      rgba(51, 34, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.9) 100%
    );
  }

  @keyframes hidden_down {
    from {
      opacity: 1;
      transform: translateY(0);
    }
    to {
      opacity: 0;
      transform: translateY(20%);
    }
  }
</style>
