---
import Layout from "../layouts/Layout.astro";
import Card from "./Card.astro";
---

<Layout title="Filidonia">
  <div class="flex items-center justify-center my-5">
    <img class="w-52 h-52" src="/favicon.svg" alt="safebooru" />
  </div>
  <h2
    class="text-4xl font-extrabold uppercase text-center my-5 dark:text-white"
  >
    FILIDONIA
  </h2>
  <p
    class="mx-auto text-center md:max-w-xl max-w-sm font-semibold text-neutral-600 dark:text-neutral-400"
  >
    Discover a new visual experience with Filidonia, similar to Pinterest but
    with an exclusive collection of images from Safebooru, Gelbooru, Rule34, and more.
  </p>

  <div class="mt-10 lg:px-20 sm:px-10 px-5">
    <h2
      class="text-2xl font-semibold capitalize tracking-tight dark:text-white"
    >
      safe services
    </h2>
    <div class="gap-5 grid xl:grid-cols-4 md:grid-cols-3 sm:grid-cols-2 mt-3">
      <Card
        title="safebooru.org"
        description=`Safebooru is a anime and manga picture search engine, images are being updated hourly.`
        avatar="https://safebooru.org/favicon.ico"
        background="https://res.cloudinary.com/dnr4oeapp/image/upload/v1716862056/deshiroku/thumbnails/safebooru.png"
        src="/extensions/safebooru"
        position="-20px"
      />
    </div>
  </div>
  <div class="mt-10 lg:px-20 sm:px-10 px-5 mb-5">
    <h2
      class="text-2xl font-semibold capitalize tracking-tight dark:text-white"
    >
      +18 services
    </h2>
    <div class="gap-5 grid xl:grid-cols-4 md:grid-cols-3 sm:grid-cols-2 mt-3">
      <Card
        title="rule34.xxx"
        description=`if something exists in real life, or is made up, there will be a
      pornographic depiction of it`
        avatar="https://rule34.xxx/favicon.ico?v=2"
        background="https://res.cloudinary.com/dnr4oeapp/image/upload/v1716862056/deshiroku/thumbnails/rule34.jpg"
        position="-30px"
        safe={false}
        src="/extensions/rule34"
        
      />
      <Card
        title="realbooru.com"
        description=`The best booru for real porn stuff.`
        avatar="https://realbooru.com/favicon.ico?v=5"
        background="https://res.cloudinary.com/dnr4oeapp/image/upload/v1716862057/deshiroku/thumbnails/realbooru.jpg"
        position="-60px"
        safe={false}
        src="/extensions/realbooru"
      />
      <Card
        title="gelbooru.com"
        description=`Millions of FREE hentai and anime videos, images, wallpapers, and more!`
        avatar="https://gelbooru.com/favicon.png"
        background="https://res.cloudinary.com/dnr4oeapp/image/upload/v1716862055/deshiroku/thumbnails/gelbooru.jpg"
        safe={false}
        src="/extensions/gelbooru"
        position="0"
      />
    </div>
  </div>
</Layout>
